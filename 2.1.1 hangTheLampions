void hangTheLampions()
{
    repeat (10)
    {
        if (onBeeper())
        {
            pickBeeper();
            turnLeft();
            while (frontIsClear())
            {
                moveForward();
            }
            dropBeeper();
            turnAround();
            while (frontIsClear())
            {
                moveForward();
            }
            turnLeft();
            if (frontIsClear())
            {
                moveForward();
            }
        }
    }
}

