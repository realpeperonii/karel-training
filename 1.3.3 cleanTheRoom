void cleanTheRoom()
{
    repeat (4)
    {
        run();
        left();
        run();
        right();
    }
    run();
    left();
    run();
}

void left()
{
    if (onBeeper())  
    {
        pickBeeper();
    }
    turnLeft();
    moveForward();
    turnLeft();
}

void right()
{
    if (onBeeper())
    {
        pickBeeper();
    }
    turnRight();
    moveForward();
    turnRight();
    
    
}

void run()
{
    repeat (10)
    {
        if (frontIsClear() && !onBeeper())
        {
            moveForward();
        }
        if (onBeeper())
        {
            pickBeeper();
        }
    }
}
