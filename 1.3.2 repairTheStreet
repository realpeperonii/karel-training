void repairTheStreet()
{
    while (frontIsClear())
    {
        if (!rightIsClear())
        {
            moveForward();
        }
        else if (rightIsClear())
        {
            repair();
        }
    }
}


void repair()
{
    turnRight();
    moveForward();
    dropBeeper();
    turnAround();
    moveForward();
    turnRight();
    moveForward();
    
}


# Second Version

void repairTheStreet()
{
    while (frontIsClear())
    {
        if (rightIsClear())
        {
            repair();
            
        }
        else if (!rightIsClear())
        {
            moveForward();
        }
    }
    repair();
}


void repair()
{
    turnRight();
    moveForward();
    dropBeeper();
    turnAround();
    moveForward();
    turnRight();
    if (frontIsClear())
    {
        moveForward();
    }
}

